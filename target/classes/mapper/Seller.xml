<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.4//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zyht.domain.Seller">

    <!-- 定义结果集-->
    <resultMap type="com.zyht.domain.Seller" id="seller">
        <id property="id" column="id" jdbcType="INT" javaType="java.lang.Long"/>
        <result property="name" column="NAME" jdbcType="java.lang.String"/>
        <result property="sex" column="SEX" jdbcType="java.lang.String"/>
        <result property="age" column="AGE" jdbcType="java.lang.Long"/>
        <result property="id_number" column="ID_NUMBER" jdbcType="java.lang.String"/>
        <result property="tel" column="TEL" jdbcType="java.lang.String"/>
        <result property="addr" column="ADDR" jdbcType="java.lang.String"/>
        <result property="profession" column="PROFESSION" jdbcType="java.lang.String"/>
        <result property="work_unit" column="WORK_UNIT" jdbcType="java.lang.String"/>
        <result property="saving" column="SAVING" jdbcType="java.lang.Double"/>
    </resultMap>
    <!--定义查询列 -->
    <sql id="columns">
        ID,NAME,SEX,AGE,ID_NUMBER,TEL,ADDR,PROFESSION,WORK_UNIT,SAVING
    </sql>
    <!--按id查-->
    <select id="queryById" resultMap="seller" parameterType="java.lang.Long">
        SELECT <include refid="columns"/> FROM seller WHERE ID=#{_param}
    </select>
    <!-- 查询所有-->
    <select id="getTestAll" resultType="java.util.Map" resultMap="seller">
        SELECT <include refid="columns"/> FROM seller
    </select>
    <!-- 添加-->
    <insert id="insert" parameterType="com.zyht.domain.Seller">
        INSERT INTO `seller` (`ID`, `NAME`,`SEX`,`AGE`,`ID_NUMBER`,`TEL`,`ADDR`,`PROFESSION`,`WORK_UNIT`,`SAVING`) VALUES (DEFAULT,#{name,jdbcType=VARCHAR}, #{sex,jdbcType=CHAR}, #{age,jdbcType=BYTE}, #{id_number,jdbcType=VARCHAR}, #{tel,jdbcType=VARCHAR}, #{addr,jdbcType=VARCHAR}, #{profession,jdbcType=VARCHAR}, #{work_unit,jdbcType=VARCHAR}, #{saving,jdbcType=DOUBLE})
    </insert>
    <!-- 修改-->
    <update id="update" parameterType="com.zyht.domain.Seller">
        UPDATE `seller` SET `id`='3', `NAME`='王五'
        <if test="@Ognl@isNotEmpty(id)">
            WHERE (`id`=${id})
        </if>
        <![CDATA[
        ]]>
    </update>
<!--删除-->
    <delete id="delete" parameterType="java.util.Map">
        DELETE FROM seller WHERE  id IN
        <if test="@Ognl@isNotEmpty(ids)">
            <foreach collection="ids" item="testId" open="("
                     separator="," close=")">
                ${testId}
            </foreach>
        </if>
    </delete>
</mapper>