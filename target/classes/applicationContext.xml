        <!--&lt;!&ndash; 初始化时建立物理连接的个数。初始化发生在显示调用init方法，或者第一次getConnection时 &ndash;&gt;-->
        <!--<property name="initialSize" value="${jdbc.pool.initialSize}" />-->
        <!--&lt;!&ndash; 最小连接池数量 &ndash;&gt;-->
